<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tokang.customer.fragments.MenuFragment"
    android:scrollbars="none"
    android:background="@color/light_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ss.com.bannerslider.views.BannerSlider
                android:id="@+id/banner_slider"
                android:layout_width="match_parent"
                android:layout_height="314dp"
                app:interval="4000"
                app:loopSlides="true"
                app:defaultIndicators="round_square"
                app:defaultBanner="1"
                app:animateIndicators="true"
                android:padding="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/aluminum"
                android:background="@drawable/card_stroke"
                android:fontFamily="@font/neo_sans_black"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/choose_service"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_menu"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/SpinKitView.Large.DoubleBounce"
            />
    </RelativeLayout>
</ScrollView>
